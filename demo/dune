(executable
 (name main)
 (enabled_if (or
  (= %{context_name} device.ios)
  (= %{context_name} simulator.ios)
  (= %{context_name} catalyst.ios)))
 (libraries camlkit-base.foundation camlkit-gui.uikit))

(subdir Demo.app
 (rule
  (alias default)
  (deps ../Info.plist ../main.exe)
  (targets Info.plist Demo)
  (enabled_if (or
   (= %{context_name} device.ios)
   (= %{context_name} simulator.ios)
   (= %{context_name} catalyst.ios)))
  (action (progn
   (copy ../Info.plist Info.plist)
   (copy ../main.exe Demo)))))